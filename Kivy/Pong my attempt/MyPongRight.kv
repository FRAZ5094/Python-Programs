#:kivy 1.11.1
<PongGame>:
    #size_hint: 0.5,0.5
    #pos_hint:{"x":0.25,"y":0.25}
    #{"x":,"y":,"top":,"bottom":,"left":,"right":}
    canvas:
        Rectangle:
            pos: root.center_x-5,0
            size: 10, self.height
            #self refers to the widget, in this case the class PongGame        
            #self.center_x is the horizontal center of the widget
    Label:
        font_size: 20
        center_x: self.width/4
        top: self.height*1/8
        text: "root"
        
    Label:
        font_size: 20 
        center_x: self.width *3/4
        top: self.height*1/8
        text: "self"